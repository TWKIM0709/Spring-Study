		  	  	  select se_num.NEXTVAL from dual
		  	  </selectKey>
		  	  insert into T(id, name) values(#num#,#name#)
	  	  </insert>
	  	    	  
	  	  
	  	  
	  	  <insert id="insertT" parameterClass="dto.dtoT">
